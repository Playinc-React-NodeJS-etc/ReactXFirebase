{
  "compileOnSave": true,
  "include": [
    "src/**/*",
    "src/@types/**/*"
  ],
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noUnusedLocals": true
  }
}